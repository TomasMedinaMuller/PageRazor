@page
@model PageRazor.Pages.EditarModel
@{
    if (Model.Venta == null)
    {
        <p>Venta no encontrada</p>
    }
    else
    {
        <form action="" method="post">
            <table class="table">
                <tbody class="table-group-divider">
                    <tr>
                        <td>Id 
                            <input type="text" name="Id" value="@Model.Venta.Id" />
                        </td>
                    </tr>
                    <tr>
                        <td>Date 
                            <input type="date" name="Fecha" value="@Model.Venta.Fecha" />
                        </td>
                        
                    </tr>
                    <tr>
                        <td>Price $ 
                            <input type="number" name="Precio" value="@Model.Venta.Precio" />
                        </td>
                        
                    </tr>
                    <tr>
                        <td>Amount
                            <input type="number" name="Cantidad" value="@Model.Venta.Cantidad" />
                        </td>
                        
                    </tr>
                    <tr>
                        <td>Name
                            <input type="text" name="Nombre" value="@Model.Venta.Nombre" />
                        </td>
                       
                    </tr>
                    <tr>
                        <td>Description
                            <input type="text" name="Descripcion" value="@Model.Venta.Descripcion" />
                        </td>
                        
                    </tr>
                    <tr>
                        <td>Seller
                            <input type="text" name="Vendedor" value="@Model.Venta.Vendedor" />
                        </td>
                        
                    </tr>
                </tbody>
            </table>
            <button class="btn btn-success">Send</button>
        </form>
    }
    <div>
    <br>
        <a href="Index" class="btn btn-primary active" aria-current="page">Volver</a>
    </div>
}
